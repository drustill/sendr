{
  "version": 3,
  "configurePresets": [
    {
      "name": "default",
      "description": "No tests build",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "BUILD_TESTS": "OFF"
      }
    },
    {
      "name": "with-tests",
      "description": "Yes tests build",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build-tests",
      "cacheVariables": {
        "BUILD_TESTS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "with-tests",
      "configurePreset": "with-tests"
    }
  ]
}
